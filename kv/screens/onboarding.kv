#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Gradient kivy_gradient.Gradient

<Onboarding>:
    name: "Screen 3"
    #on_touch_down: print("Haala")
    canvas.before:
        PushMatrix:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.size
            pos: self.pos
    canvas.after:
        PopMatrix:
    Label:
        canvas:
            Ellipse:
                angle_start: 0
                angle_end: 360
                pos: -10, 100
                size: 150, 150
                texture: Gradient.horizontal([17/255, 106/255, 106/255, 1], [10/255, 24/255, 50/255, 1])
            Ellipse:
                angle_start: 0
                angle_end: 360
                pos: 100, 400
                size: 300, 300
                texture: Gradient.horizontal([67/255, 17/255, 106/255, 1], [10/255, 24/255, 50/255, 1])
            Ellipse:
                angle_start: 0
                angle_end: 360
                pos: 150, 200
                size: 200, 200
                texture: Gradient.horizontal([17/255, 106/255, 106/255, 1], [10/255, 24/255, 50/255, 1])
            Ellipse:
                angle_start: 0
                angle_end: 360
                pos: 400, 500
                size: 50, 50
                texture: Gradient.horizontal([67/255, 17/255, 106/255, 1], [10/255, 24/255, 50/255, 1])
            Ellipse:
                angle_start: 0
                angle_end: 360
                pos: 600, 200
                size: 600, 600
                texture: Gradient.horizontal([17/255, 106/255, 106/255, 1], [10/255, 24/255, 50/255, 1])
            Ellipse:
                angle_start: 0
                angle_end: 360
                pos: 800, 700
                size: 430, 430
                texture: Gradient.horizontal([67/255, 17/255, 106/255, 1], [10/255, 24/255, 50/255, 1])
        canvas.after:
            Color:
                rgba: 1, 1, 1, 0.13
            Rectangle:
                size: self.size
                pos: self.pos
    IdeaLabel1:
        id: ideaLabel1
        text: "iDea"
        pos_hint: {'center_y':0.97, 'center_x': 0.5}
        font_size: "30dp"
        color: 1, 1, 1, 1
    MDBoxLayout:
        orientation: 'vertical'
        size_hint: .9, .3
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        spacing: "10dp"
        MDLabel:
            id: share
            text: "Share Information Easily Within MTU"
            font_name: "Arial"
            font_size: "60dp"
            color: 1, 1, 1, 1
            pos_hint: {'left': 1}
    MDBoxLayout:
        orientation: "vertical"
        size_hint: .7, .1
        pos_hint: {'center_x': 0.41, 'center_y': 0.42}
        MDLabel:
            id: second_text_first_line
            text: "Our chat app is the perfect way to stay informed about Lectures and school activites"
            font_name: "fonts/Montserrat-Light.ttf"
            font_size: "16dp"
            pos_hint: {'left': 1}
            color: (185/255, 193/255, 190/255, 1)
        
    BoxLayout:
        orientation: "vertical"
        size_hint: .85, .07
        pos_hint: {'center_x': 0.5, 'center_y': 0.17}
        SmoothButton:
            id: sign_up_button
            text:"Sign Up"
            font_name: 'Arial'
            font_size: "15dp"
            color: (0, 14/255, 8/255, 1)
            #on_touch_down: app.handle_signUp(*args)
            on_press: self.back_color=(0.5, 0.5, 0.5, 1)
            on_release: 
                self.back_color=(1, 1, 1, 1)
                self.parent.parent.changeScreenToSignUpScreen(*args)
    BoxLayout:
        orientation: "horizontal"
        size_hint: .5, .1
        pos_hint: {'center_x': 0.5, 'center_y': 0.08}
        padding: 0
        spacing: 0
        Label:
            id: existing_account
            text: "Existing account?"
            font_name: "fonts/Montserrat-ExtraLight.ttf"
            font_size: '15dp'
            color: (185/255, 193/255, 190/255, 1)
            size_hint_x: None
            size: self.texture_size
            pos_hint: {'right': 0.5}
        Button:
            id: log_in
            text: " Log in"
            font_size: '15dp'
            background_normal: ''
            background_down: ''
            background_color: (0,0,0,0)
            color: (1, 1, 1 ,1 )
            size_hint_x: None
            size: self.texture_size
            pos_hint: {'x': 0.5}
            #on_touch_down: app.handle_login(*args)
            on_press:  self.color=(0.5, 0.5, 0.5, 1) #app.handle_press(self)
            on_release: 
                self.color=(1, 1, 1, 1)
                self.parent.parent.changeScreenToLoginInScreen(*args)

