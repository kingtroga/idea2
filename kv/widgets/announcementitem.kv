<AnnouncementItem>:
    ######################################################################################################################################
    ############################################ANNOUNCEMENT MAIN CONTAINER###############################################################
    ######################################################################################################################################
    id: announcement
    size_hint: 1, 0.34
    md_bg_color: get_color_from_hex("#FFFFFF")
    ##############################################################################################################################
    #######################################THE INFO PART (With Author avatar, name, and date created)#############################
    ##############################################################################################################################
    MDFloatLayout:
        pos_hint: {'center_x': 0.5, 'y': .7}
        size_hint: 1, 0.3
        md_bg_color: get_color_from_hex("#FFFFFF")
        MDIconButton:
            icon: announcement.avatar ## AUTHOR AVATAR
            icon_color: get_color_from_hex("FFFFFF")
            icon_size: "40dp"
            theme_icon_color: "Custom"
            pos: self.parent.pos[0] + 22.5, self.parent.pos[1] + 5
            canvas:
                Color: 
                    rgb: 242/255, 248/255, 247/255, 1
                RoundedRectangle:
                    source: self.icon
                    size: self.size
                    pos: self.pos
                    radius: [50]
        MDLabel:
            id: author_name
            text: announcement.author_name ## AUTHOR NAME
            font_name: "fonts/arialmt.TTF"
            font_size: "19dp"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1
            pos: self.parent.pos[0]  + 100, self.parent.pos[1] + 5
        MDLabel:
            text: announcement.date_created  ## DATE CREATED
            font_name: "fonts/Montserrat-Light.ttf"
            font_size: "15dp"
            theme_text_color: "Custom"
            text_color: 121/255, 124/255, 123/255, 1
            pos: self.parent.pos[0] + 99, self.parent.pos[1] - 20
    ##############################################################################################################################
    #######################################THE GREEN PART (With the Announcement Topic and Content)###############################
    ##############################################################################################################################
    MDFloatLayout:
        radius: [40, 40, 40, 40]
        pos_hint: {'center_x': 0.47, 'center_y': .35}
        size_hint: 0.8, 0.6
        md_bg_color: 242/255, 248/255, 247/255, 1
        canvas.before:
            Color:
                rgba: self.md_bg_color
            RoundedRectangle:
                size: self.size[0] + 20, self.size[1]
                radius: self.radius
                pos: self.pos
        MDLabel:
            text: announcement.topic ## ANNOUCEMENT TOPIC
            font_name:"fonts/ARLRDBD.ttf"
            font_size: "20dp"
            width: self.parent.width
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1
            pos: self.parent.pos[0] + 15, self.parent.pos[1] + 50
        MDLabel:
            color: 121/255, 124/255, 123/255, 1  ## ANNOUCEMENT CONTENT
            font_name:"fonts/Montserrat-Light.ttf"
            text: announcement.body
            width: self.parent.width
            font_size: "15dp"
            halign: "left"
            pos: self.parent.pos[0] + 15, self.parent.pos[1] - 20

